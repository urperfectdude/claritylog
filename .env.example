# ===========================================
# CLARITYLOG - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
# ===========================================

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# OpenAI (Text analysis, embeddings, Whisper STT)
OPENAI_API_KEY=sk-your-openai-api-key

# ElevenLabs (Voice synthesis & AI phone calls via Agents platform)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-voice-id
ELEVENLABS_AGENT_ID=your-agent-id

# LinkedIn OAuth (optional - for social sharing)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Twitter/X OAuth (optional - for social sharing)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Firebase (Push Notifications)
# Note: Also add google-services.json (Android) and GoogleService-Info.plist (iOS)
FIREBASE_PROJECT_ID=your-firebase-project-id
